{
    "openapi": "3.0.0",
    "info": {
        "title": "My Laravel API",
        "description": "Documentation for My Laravel API",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost/admin.fernand-dedeh.blog/public",
            "description": "API Server"
        }
    ],
    "paths": {
        "/api/v1/articles": {
            "get": {
                "tags": [
                    "Articles"
                ],
                "summary": "Get list of articles",
                "description": "Returns a list of articles with their category",
                "operationId": "getArticlesList",
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "id": {
                                                "type": "integer",
                                                "example": 1
                                            },
                                            "title": {
                                                "type": "string",
                                                "example": "Titre de l'article"
                                            },
                                            "type": {
                                                "type": "string",
                                                "example": "Type de l'article : PODCAST | ARTICLE"
                                            },
                                            "path_resource": {
                                                "type": "string",
                                                "example": "Image de l'article"
                                            },
                                            "content": {
                                                "type": "string",
                                                "example": "Contenu de l'article"
                                            },
                                            "category": {
                                                "properties": {
                                                    "id": {
                                                        "type": "integer",
                                                        "example": 10
                                                    },
                                                    "name": {
                                                        "type": "string",
                                                        "example": "Catégorie 1"
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        },
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthenticated"
                    },
                    "403": {
                        "description": "Forbidden"
                    }
                }
            }
        },
        "/api/v1/categories": {
            "get": {
                "tags": [
                    "Categories"
                ],
                "summary": "Get list of categories",
                "description": "Returns a list of categories with their associated articles",
                "operationId": "getCategoriesList",
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "id": {
                                                "type": "integer",
                                                "example": 1
                                            },
                                            "name": {
                                                "type": "string",
                                                "example": "Catégorie 1"
                                            },
                                            "articles": {
                                                "type": "array",
                                                "items": {
                                                    "properties": {
                                                        "id": {
                                                            "type": "integer",
                                                            "example": 10
                                                        },
                                                        "title": {
                                                            "type": "string",
                                                            "example": "Titre de l'article"
                                                        },
                                                        "content": {
                                                            "type": "string",
                                                            "example": "Contenu de l'article"
                                                        }
                                                    },
                                                    "type": "object"
                                                }
                                            }
                                        },
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthenticated"
                    },
                    "403": {
                        "description": "Forbidden"
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Articles",
            "description": "Articles"
        },
        {
            "name": "Categories",
            "description": "Categories"
        }
    ]
}